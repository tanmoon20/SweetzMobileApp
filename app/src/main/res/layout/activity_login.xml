<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purple_to_blue_bg"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="510dp"
        android:layout_centerInParent="true"
        android:background="@drawable/sign"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="365dp"
            android:layout_gravity="center"
            android:layout_marginTop="135dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/name"
                android:ems="18"
                android:fontFamily="@font/iceland"
                android:gravity="center_vertical|center_horizontal"
                android:hint="USERNAME"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#73000000"
                android:textSize="32dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="115dp"
                android:background="@drawable/name"
                android:ems="18"
                android:fontFamily="@font/iceland"
                android:gravity="center_vertical|center_horizontal"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#73000000"
                android:textSize="32dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="210dp"
                android:background="@drawable/edit"
                android:backgroundTint="#3EB489"
                android:fontFamily="@font/fira_mono_bold"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/register"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="270dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit"
                android:backgroundTint="#3EB489"
                android:fontFamily="@font/fira_mono_bold"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"
                android:fontFamily="@font/aldrich"
                android:padding="8dp"
                android:text="Enjoy Our App as a Guest!"
                android:textAlignment="center"
                android:textColor="#6A5E5E"
                android:textSize="15dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>